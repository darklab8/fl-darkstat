			<td>
				@frmt.WriteFactioName(trade_route.Transport.SellingGood.FactionName)
			</td>
			<td>
				@frmt.WriteBaseName(trade_route.Transport.SellingGood.BaseName)
			</td>
			<td>
				@frmt.WriteRegionName(trade_route.Transport.SellingGood.Region)
			</td>
