			<td>{ strconv.Itoa(trade_route.Transport.SellingGood.GetPriceBaseBuysFor()) }</td>
			<td>{ trade_route.Transport.SellingGood.Nickname }</td>
			<td>
				@frmt.WriteLimit(100) {
